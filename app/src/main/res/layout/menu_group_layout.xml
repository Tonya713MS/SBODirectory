<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/small_vertical_spacing"
    android:paddingTop="@dimen/small_vertical_spacing">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/menu_list_divider"-->
    <!--android:layout_marginBottom="@dimen/small_vertical_spacing" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:background="@drawable/icon_menu_building" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="abc"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/menu_text_normal" />

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/icon_arrow_right" />
    </LinearLayout>
</LinearLayout>