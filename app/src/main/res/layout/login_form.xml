<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/login_username_input"
        style="@style/LoginUI.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_username"
        android:hint="@string/username_input_hint" />

    <EditText
        android:id="@+id/login_password_input"
        style="@style/LoginUI.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_vertical_spacing"
        android:drawableLeft="@drawable/icon_password"
        android:fontFamily="sans-serif"
        android:hint="@string/password_input_hint"
        android:inputType="textPassword"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/login_button"
        style="@style/LoginUI.Button"
        android:layout_marginBottom="@dimen/vertical_spacing"
        android:layout_marginTop="@dimen/vertical_spacing"
        android:text="@string/login_button_label" />

    <Button
        android:id="@+id/signup_button"
        style="@style/LoginUI.HelpButton"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="@dimen/vertical_spacing"
        android:text="@string/unexited_button_label" />
</LinearLayout>
